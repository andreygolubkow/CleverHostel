<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ArrearsChecker">
    <DataTemplate x:Key="StudentCardTemplate">
        <Grid Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Margin="2,6">
                <TextBlock FontWeight="Bold" Text="{Binding Path=Name}"/>
                <TextBlock>
                    <TextBlock FontWeight="Bold" Text="Группа:"/>
                    <TextBlock Text="{Binding Path=Group}"/>
                    <TextBlock Text="      "></TextBlock>
                    <TextBlock FontWeight="Bold" Text=" Комната:"/>
                    <TextBlock Text="{Binding Path=Room}"/>
                </TextBlock>
                <TextBlock>
                        <TextBlock Text="Задолженность:"/>
                        <TextBlock Text="{Binding Path=Arrear}"/>
                        <TextBlock Text="  "/>
                        <TextBlock Text="Оплачено:"/>
                        <TextBlock Text="{Binding Path=IsPayed}"/>
                </TextBlock>
                <TextBlock />
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>